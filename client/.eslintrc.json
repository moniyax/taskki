{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "comma-dangle": ["error", "only-multiline"],
    "space-before-function-paren": "off",
    "indent": "off",
    "no-console": "error"
  },
  "settings": {
    "react": {
      "version": "16.13"
    }
  }
}
